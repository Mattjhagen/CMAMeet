{
  "name": "cmameet",
  "version": "1.0.0",
  "description": "CMA Virtual Meetings - Crystal Meth Anonymous online support group meetings",
  "main": "index/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "npm run install-all && cd client && npm run build",
    "start": "node index/index.js",
    "heroku-postbuild": "npm run build",
    "render-postbuild": "npm run build"
  },
  "keywords": [
    "cma",
    "crystal-meth-anonymous",
    "recovery",
    "meetings",
    "video",
    "conferencing",
    "webrtc",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "socket.io": "^4.8.3",
    "uuid": "^9.0.1"
  }
}
