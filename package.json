{
  "name": "cmameet",
  "version": "1.0.0",
  "description": "CMA Virtual Meetings - Crystal Meth Anonymous online support group meetings",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "npm run install-all && cd client && npm run build",
    "start": "node index.js",
    "heroku-postbuild": "npm run build",
    "render-postbuild": "npm run build"
  },
  "keywords": ["cma", "crystal-meth-anonymous", "recovery", "meetings", "video", "conferencing", "webrtc", "socket.io"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  }
}
